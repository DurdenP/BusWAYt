<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gold"
    tools:context="app.durdenp.com.buswayt.bus.BusConfigActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Bus"
        android:textSize="30sp"
        android:textColor="@color/background_material_dark"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/busIdEditText"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linea"
        android:textSize="30sp"
        android:textColor="@color/background_material_dark"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/LineaIdEditText2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busIdEditText"
        android:width="120dp"
        android:textColor="@color/background_material_dark"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/LineaIdEditText2"
        android:layout_alignEnd="@+id/button3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LineaIdEditText2"
        android:width="120dp"
        android:textColor="@color/background_material_dark"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/busIdEditText" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva Preferenze"
        android:id="@+id/saveCheckBox"
        android:checked="false"
        android:textColor="@color/background_material_dark"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Bus Localization Service"
        android:id="@+id/button3"
        android:onClick="startLocalizationService"
        android:layout_marginBottom="51dp"
        android:layout_alignParentBottom="true"
        android:background="@color/btn_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BusWAYt"
        android:id="@+id/textView11"
        android:textSize="36sp"
        android:typeface="serif"
        android:textColor="@color/background_material_dark"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
