<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asparago"

    tools:context="app.durdenp.com.buswayt.client.RequestLineaFragment">

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleziona CittÃ : "
        android:id="@+id/cityChooseLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textSize="25dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityChooseSpinner"
        android:layout_alignTop="@+id/cityChooseLabel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/cityChooseLabel" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Seleziona Linea:"
        android:id="@+id/lineaChooseLabel"
        android:layout_below="@+id/cityChooseSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textSize="25dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineaChooseSpinner"
        android:layout_alignTop="@+id/lineaChooseLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/cityChooseSpinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizza Linea"
        android:id="@+id/traceLineaBtn"
        android:textColor="@color/background_material_dark"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
